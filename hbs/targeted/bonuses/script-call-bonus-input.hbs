<div class="form-group script-bonus-input roll-bonuses">
    {{> "modules/ckl-roll-bonuses/hbs/label.hbs"}}
    <div class="form-fields">
        {{#each scripts as |script i|}}
        <li class="flexrow script-row" data-index="{{i}}">
            <div class="script-name" data-tooltip="{{name}}">
                {{name}}
            </div>
            {{#if readonly}}
            <input type="text" readonly value="{{category.label}}" />
            {{else}}
            <select class="category-select">
                {{selectOptions ../categories selected=category nameAttr="key" labelAttr="label"}}
            </select>
            {{/if}}
            {{#unless readonly}}
            <a class="trait-selector edit-script"><i class="fas fa-edit"></i></a>
            <a class="trait-selector delete-script"><i class="fas fa-trash"></i></a>
            {{/unless}}
        </li>
        {{/each}}
        {{#unless readonly}}
        {{!-- <li class="flexrow"> --}}
            <a class="add-script"><i class="fas fa-plus"></i>
                {{localize "PF1.ScriptCalls.NewName"}}
            </a>
        {{!-- </li> --}}
        {{/unless}}
    </div>
</div>
