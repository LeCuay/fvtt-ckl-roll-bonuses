<form class="roll-bonuses item-selector">
    <div class="items-container">

        {{#each groupedItems}}
        <h4>{{@key}}</h4>
        {{#each this}}
        <div
            class="item-selector-row" style="display: flex;"
            data-tooltip="{{this.name}}<br>{{this.typeLabel}}"
        >
            <input
                type="checkbox"
                name="{{../../path}}"
                {{#if this.checked}}checked{{/if}}
                value="{{this.uuid}}"
                id="{{../../item.id}}_{{this.id}}"
            >
            <label for="{{../item.id}}_{{this.id}}">
                <div class="item-selector-contents">
                    <img src="{{this.img}}">
                    <h4>{{this.name}}</h4>
                </div>
            </label>
        </div>
        {{/each}}
        <br>
        {{/each}}


    </div>
    <div class="form-group">
        <button id="reset-actions">
            <i class="fas fa-rotate-left"></i> TODO CANCEL
        </button>
        <button type="submit">
            <i class="fas fa-save"></i> TODO OK
        </button>
    </div>

</form>
