<div class="form-group roll-bonuses">
    {{> "modules/ckl-roll-bonuses/hbs/label.hbs"}}
    <div class="form-fields">
        {{#if readonly}}
        {{#if current}}
        <input type="text" readonly value="{{current}}" />
        {{/if}}
        {{else if errorMsg}}
        <div class="error-text">{{errorMsg}}</div>
        {{else}}
        <select name="string-selector" id="string-selector-{{key}}">
            {{#select current}}
            {{#each choices}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
            {{/select}}
        </select>
        {{/if}}
    </div>
</div>
