<form class="roll-bonuses roll-bonuses-form bonus-picker">
    <div class="form-body">
        <div class="sources">
            <div>
                <h2>{{ localize 'ckl-roll-bonuses.bonuses.label.targets' }}</h2>
                {{#each targets}}
                <div data-tooltip="{{this.tooltip}}">
                    <label class="checkbox-label">
                        <input
                            type="checkbox"
                            id="{{this.key}}"
                            name="{{this.path}}"
                            {{ checked this.value }}
                        />
                        {{this.label}}
                    </label>
                </div>
                {{/each}}
            </div>
            <div>
                <h2>{{ localize 'ckl-roll-bonuses.bonuses.label.bonuses' }}</h2>
                {{#each bonuses}}
                <div data-tooltip="{{this.tooltip}}">
                    <label class="checkbox-label">
                        <input
                            type="checkbox"
                            id="{{this.key}}"
                            name="{{this.path}}"
                            {{ checked this.value }}
                        />
                        {{this.label}}
                    </label>
                </div>
                {{/each}}
            </div>
        </div>

        {{#if specifics.length}}
        <h2>{{ localize 'ckl-roll-bonuses.specific-bonuses' }}</h2>
        <div class="specific-bonuses">
            {{#each specifics}}
                <div data-tooltip="{{this.tooltip}}">
                    <label class="checkbox-label">
                        <input
                            type="checkbox"
                            id="{{this.key}}"
                            name="{{this.path}}"
                            {{ checked this.value }}
                        />
                        {{this.label}}
                    </label>
                </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
    <div class="control-group">
        <button type="reset">
            <i class="fas fa-rotate-left"></i> {{localize "ckl-roll-bonuses.cancel"}}
        </button>
        <button type="submit">
            <i class="fas fa-save"></i> {{localize "ckl-roll-bonuses.ok"}}
        </button>
    </div>
</form>
